{
  "name": "Magnata",
  "description": "Magnata: The Game",
  "version": "0.2",
  "manifest_version": 3,
  "icons": {
    "16": "/images/M16.png",
    "32": "/images/M32.png",
    "48": "/images/M48.png",
    "128": "/images/M128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/M16.png",
      "32": "/images/M32.png",
      "48": "/images/M48.png",
      "128": "/images/M128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.google.com/maps/*"],
      "css": ["game.css"],
      "js": ["jquery-3.7.1.min.js", "dayjs.min.js", "magnata.bundle.js", "game.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "tabs", "windows", "storage"]
}
